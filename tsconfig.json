{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    // "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "types": [
    //   "webpack-env",
    // ],
    "paths": {
      "@/*": [
        "lib/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "lib/*.ts", "lib/index.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}